<h1><%= @article.title %></h1>
<div>
	<%= @article.body.html_safe %>
</div>
<div>
	<%= link_to "Editar", edit_article_path(@article), class:"green" %>
</div>
<% unless @article.user.nil? %>
	<p>
		Escrito por: <%= @article.user.email%>
	</p>
<% end %>
<div class="field">
	<% @article.categories.each do |category| %>
		<%= link_to category.name, category, style:"color:#{category.color};"%>
	<% end %>
</div>
<div class="field">
	<% unless @article.cover_file_name.nil? %>
		<%= image_tag @article.cover.url(:thumb) %>
 	<%	end %>
</div>
<p>
		Visitas: <%= @article.visits_count%>
</p>
<div class="feild">
	<h3>Comentarios</h3>
	<ul id="comments-box">
		<% @article.comments.each do |comment|%>
			<li type="square">
				<%= comment.body %> - Escrito por: <%= comment.user.email %>
			</li>
		<% end %>
	</ul>
	<%= render "comments/form" %>
</div>
